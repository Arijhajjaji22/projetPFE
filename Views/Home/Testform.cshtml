            }

            $('#testFormContainer').on('click', '.deleteOptionButton', function () {
                var questionIndex = $(this).data('question-index');
                var form = $(this).closest('form');
                var questionContainer = form.find('.question-container[data-question-index="' + questionIndex + '"]');

                // Afficher les cases à cocher à côté de chaque réponse dans cette question
                questionContainer.find('.delete-answer-checkbox').show();
                // Afficher un bouton "Supprimer" pour permettre à l'utilisateur de supprimer les réponses sélectionnées
                var deleteButtonHtml = '<button type="button" class="deleteSelectedAnswersButton" data-question-index="' + questionIndex + '">Supprimer</button>';
                questionContainer.append(deleteButtonHtml);
            });

            $('#testFormContainer').on('click', '.deleteSelectedAnswersButton', function () {
                var questionIndex = $(this).data('question-index');
                var form = $(this).closest('form');
                var questionContainer = form.find('.question-container[data-question-index="' + questionIndex + '"]');

                // Récupérer les cases à cocher sélectionnées
                var selectedCheckboxes = questionContainer.find('.delete-answer-checkbox:checked');

                // Supprimer les réponses correspondant aux cases à cocher sélectionnées
                selectedCheckboxes.each(function () {
                    var answerIndex = $(this).data('answer-index');
                    questionContainer.find('.answer-container[data-answer-index="' + answerIndex + '"]').remove();
                });

                // Cacher les cases à cocher et le bouton "Supprimer"
                questionContainer.find('.delete-answer-checkbox').hide();
                questionContainer.find('.deleteSelectedAnswersButton').remove();
            });



            $('#testFormContainer').on('click', '.addQuestionButton', function () {
                var form = $(this).closest('form');
                var questionCount = form.find('.question-container').length;
                var newQuestionHtml = '<div class="question-container" data-question-index="' + questionCount + '">' +
                    '<label for="newQuestion_' + questionCount + '">Nouvelle Question:</label>' +
                    '<input type="text" id="newQuestion_' + questionCount + '" name="newQuestion_' + questionCount + '" class="question-title" placeholder="Entrez votre question ici">' +
                    '<br>' +
                    '<button type="button" class="addAnswerButton" data-question-index="' + questionCount + '">Ajouter une réponse</button>' +
                    '<button type="button" class="saveQuestionButton" data-question-index="' + questionCount + '">Enregistrer la question</button>' +
                    '<br>' +
                    '</div>';

                form.find('.questions-container').append(newQuestionHtml);
            });

            $('#testFormContainer').on('click', '.saveQuestionButton', function () {
                var form = $(this).closest('form');
                var questionIndex = $(this).data('question-index');
                var newQuestionInput = form.find('#newQuestion_' + questionIndex);
                var newQuestion = newQuestionInput.val();

                // Vérifier si la question est vide
                if (newQuestion.trim() === '') {
                    alert('Veuillez entrer une question avant de l\'enregistrer.');
                    return;
                }

                // Créer un objet JSON contenant la question et d'autres données nécessaires
                var requestData = {
                    Title: 'Titre du test', // Remplacez par le titre réel
                    Subject: 'Sujet du test', // Remplacez par le sujet réel
                    Description: 'Description du test', // Remplacez par la description réelle
                    Questions: [
                        {
                            Query: newQuestion, // Assurez-vous d'inclure la question
                            type: 'Type de question ici', // Remplacez par le type de question réel
                            answers: [] // Réponses vides
                        }
                    ]
                };

                // Envoyer la requête HTTP POST vers l'API pour ajouter la question
                $.ajax({
                    url: '/api/Test/submit_test',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(requestData), // Envoyer les données dans le format JSON attendu
                    success: function (response) {
                        console.log('Question ajoutée avec succès:', response);
                        // Vous pouvez effectuer d'autres actions ici si nécessaire

                        // Réinitialiser l'input de la nouvelle question après l'ajout
                        newQuestionInput.val('');
                    },
                    error: function (xhr, status, error) {
                        console.error('Erreur lors de l\'ajout de la question:', error);
                    }
                });
            });









            $('#testFormContainer').on('click', '#createTestButton', function () {
                window.location.href = '@Url.Action("Creationtests", "Home")';
            });

            loadAndDisplayTests();
            $(window).on('load', function () {
                loadAndDisplayTests();
            });
            function displayTest(tests) {
                if (!Array.isArray(tests)) {
                    console.error('La réponse n\'est pas un tableau :', tests);
                    return;
                }

                var formHtml = '';
                tests.forEach(function (test, index) {
                    formHtml += '<form id="form_' + index + '" data-test-id="' + test.id + '">';
                    formHtml += '<label for="title">Title:</label>';
                    formHtml += '<input type="text" id="title" name="title" value="' + test.title + '" readonly><br>';
                    formHtml += '<label for="description">Description:</label>';
                    formHtml += '<textarea id="description" name="description" readonly>' + test.description + '</textarea><br>';
                    formHtml += '<label for="duration">Duration (minutes):</label>';
                    formHtml += '<input type="number" id="duration" name="duration" value="' + test.duration + '" readonly><br>';

                    formHtml += '<div class="button-group d-flex justify-content-end mt-3">';
                    formHtml += '<div class="dropdown">';
                    formHtml += '<button class="btn custom-dropdown-toggle" type="button" id="dropdownMenuButton_' + index + '" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">';
                    formHtml += 'Actions <i class="fas fa-chevron-down"></i>'; // Utilise une icône Font Awesome pour la flèche
                    formHtml += '</button>';
                    formHtml += '<div class="dropdown-menu" aria-labelledby="dropdownMenuButton_' + index + '">';

                    formHtml += '<a class="dropdown-item editButton" data-index="' + index + '">Modifier</a>';
                    formHtml += '<a class="dropdown-item deleteButton" data-index="' + index + '">Supprimer</a>';
                    formHtml += '<div class="dropdown-divider"></div>';
                    formHtml += '<a class="dropdown-item downloadPDFButton" data-index="' + index + '" data-version="manager">Télécharger PDF pour Manager</a>';
                    formHtml += '<a class="dropdown-item downloadPDFButton" data-index="' + index + '" data-version="candidate">Télécharger PDF pour Candidat</a>';
                    formHtml += '</div>'; // Fermeture de dropdown-menu
                    formHtml += '</div>'; // Fermeture de dropdown
                    formHtml += '</div>'; // Fermeture de button-group

                    formHtml += '<div class="questions-container mt-3">';
                    test.questions && test.questions.forEach(function (question, qIndex) {
                        formHtml += '<div class="question-container" data-question-index="' + qIndex + '">';
                        formHtml += '<div class="question-header d-flex align-items-center">';
                        formHtml += '<label for="question_' + qIndex + '">Question ' + (qIndex + 1) + ':</label>';
                        formHtml += '<div class="dropdown question-dropdown ml-2">';
                        formHtml += '<button class="btn custom-dropdown-toggle" type="button" id="questionDropdown_' + index + '_' + qIndex + '" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">';
                        formHtml += 'Actions <i class="fas fa-chevron-down"></i>'; // Ajout du texte "Options"
                        formHtml += '</button>';
                        formHtml += '<div class="dropdown-menu" aria-labelledby="questionDropdown_' + index + '_' + qIndex + '">';
                        formHtml += '<a class="dropdown-item addQuestionButton">Ajouter une question</a>';
                        formHtml += '<a class="dropdown-item deleteQuestionButton" data-question-index="' + qIndex + '">Supprimer question</a>';
                        formHtml += '<a class="dropdown-item addAnswerButton" data-question-index="' + qIndex + '">Ajouter option</a>';
                        formHtml += '<a class="dropdown-item addQuestionButton">Supprimer une option</a>';
                        formHtml += '</div>'; // Fermeture de dropdown-menu
                        formHtml += '</div>'; // Fermeture de dropdown
                        formHtml += '</div>'; // Fermeture de question-header

                        formHtml += '<input type="text" id="question_' + qIndex + '" name="question_' + qIndex + '" value="' + question.query + '" class="question-title" readonly>';

                        formHtml += '<label for="questionType' + qIndex + '">Type:</label>';
                        formHtml += '<input type="text" id="questionType' + qIndex + '" name="questionType' + qIndex + '" value="' + question.type + '" readonly>';
                        formHtml += '<br>';
                        question.answers.forEach(function (answer, aIndex) {
                            var correctAnswerClass = answer.isCorrect ? 'correct-answer' : '';
                            var correctAnswerText = answer.isCorrect ? '<span class="correct-answer" style="color: green;"> ✔ C\'est la réponse correcte !</span>' : '';

                            // Ajout de la case à cocher pour supprimer la réponse
                            formHtml += '<input type="checkbox" class="delete-answer-checkbox" data-question-index="' + qIndex + '" data-answer-index="' + aIndex + '">';

                            formHtml += '<label for="answer_' + qIndex + '_' + aIndex + '">Answer ' + (aIndex + 1) + ':</label>';
                            formHtml += '<input type="text" id="answer_' + qIndex + '_' + aIndex + '" name="answer_' + qIndex + '_' + aIndex + '" value="' + answer.response + '" class="test-response ' + correctAnswerClass + '" data-question="' + qIndex + '" readonly>' + correctAnswerText;
                            formHtml += '<br>';
                        });


                        formHtml += '</div>'; // Fermeture de question-container
                    });
                    formHtml += '</div>'; // Fermeture de questions-container
                    formHtml += '</form>';
                });

                $('#testFormContainer').html(formHtml);
            }













            $('#testFormContainer').on('click', '.editButton', function () {
                var index = $(this).data('index');
                var form = $('#form_' + index);
                form.find('input:not([id^="questionType"]), textarea').removeAttr('readonly');
                var saveButton = $('<button type="button" class="saveButton" data-index="' + index + '">Enregistrer</button>');
                $(this).after(saveButton);
                $(this).hide();
            });

            $('#testFormContainer').on('click', '.saveButton', function () {
                var index = $(this).data('index');
                var form = $('#form_' + index);

                var updatedTest = {
                    id: form.data('test-id'),
                    title: form.find('#title').val(),
                    description: form.find('#description').val(),
                    duration: form.find('#duration').val(),
                    subject: "Votre sujet ici",
                    questions: []
                };

                form.find('.question-container').each(function (qIndex, questionContainer) {
                    var question = {
                        query: $(questionContainer).find('.question-title').val(),
                        type: $(questionContainer).find('#questionType' + qIndex).val(),
                        answers: []
                    };

                    $(questionContainer).find('.test-response').each(function (aIndex, answerInput) {
                        var isCorrect = $(answerInput).next('.correct-answer').length > 0;

                        question.answers.push({
                            response: $(answerInput).val(),
                            isCorrect: isCorrect
                        });
                    });

                    updatedTest.questions.push(question);
                });

                $.ajax({
                    url: '/api/Test/' + form.data('test-id'),
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(updatedTest),
                    success: function (result) {
                        console.log('Test mis à jour avec succès');
                        loadAndDisplayTests();
                    },
                    error: function (xhr, status, error) {
                        console.error('Erreur lors de la mise à jour du test:', error);
                    }
                });

                form.find('input:not([id^="questionType"]), textarea').attr('readonly', true);
                $(this).remove();
                form.find('.editButton').show();
            });

            $('#testFormContainer').on('click', '.deleteButton', function () {
                var form = $(this).closest('form');
                var testId = form.data('test-id');

                $.ajax({
                    url: '/api/Test/' + testId,
                    type: 'DELETE',
                    success: function (result) {
                        console.log('Test supprimé avec succès');
                        form.remove();

                        var tests = JSON.parse(localStorage.getItem('tests'));
                        if (tests) {
                            tests = tests.filter(function (test) {
                                return test.id !== testId;
                            });
                            localStorage.setItem('tests', JSON.stringify(tests));
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Erreur lors de la suppression du test:', error);
                    }
                });
            });

            $('#testFormContainer').on('click', '.addAnswerButton', function () {
                var questionIndex = $(this).data('question-index');
                var form = $(this).closest('form');
                var answerCount = form.find('.question-container[data-question-index="' + questionIndex + '"] .test-response').length;
