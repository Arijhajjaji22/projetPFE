        document.getElementById('userForm').addEventListener('submit', function (event) {
            event.preventDefault();
            // Récupérer toutes les compétences sélectionnées dans la liste déroulante
            var competencesRequisesValue = document.getElementById('competencesRequises').value;
            // Divisez la chaîne de valeurs en un tableau en utilisant une virgule comme séparateur
            var competencesSelectionnees = competencesRequisesValue.split(',');
            var domaineActiviteValue = document.getElementById('domaine_activite').value;
            var niveauEtudesValue = document.getElementById('niveau_etudes').value;
            var typeStageValue = document.getElementById('type_stage').value;


            // Créer l'objet formData avec les données du formulaire
            var formData = {
                Titre: document.getElementById('titre').value,
                Description: document.getElementById('description').value,
                DomaineActivite: domaineActiviteValue,
                CompetencesRequises: competencesSelectionnees, // Utiliser le tableau des compétences sélectionnées
                DateDebut: document.getElementById('date_debut').value,
                DateFin: document.getElementById('date_fin').value,
                NiveauEtudesRequis: niveauEtudesValue,
                TypedeStage: typeStageValue,

            };
            console.log(formData);
            // Envoyer les données au backend
            fetch('/api/StageOffer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
                .then(response => {
                    if (response.ok) {
                        // Traitement en cas de succès
                        window.location.href = '@Url.Action("GestionSujets", "Home")';
                    } else {
                        // Traitement en cas d'erreur
                    }
                })
                .catch(error => {
                    console.error('Erreur lors de l\'envoi des données au serveur :', error);
                });
        });



        function addSelectedSkill(skill) {
            var selectedSkillsDiv = document.getElementById('selectedSkills');
            var skillSpan = document.createElement('span');
            skillSpan.textContent = skill;
            skillSpan.setAttribute('data-skill', skill);
            skillSpan.addEventListener('click', function () {
                this.parentNode.removeChild(this);
            });
            selectedSkillsDiv.appendChild(skillSpan);
        }

        var selectCompetences = document.getElementById('competences');
        selectCompetences.addEventListener('change', function () {
            var selectedOptions = this.selectedOptions;
            for (var i = 0; i < selectedOptions.length; i++) {
                var skill = selectedOptions[i].value;
                addSelectedSkill(skill);
            }

        });

        document.querySelector('.autre-btn').addEventListener('click', function () {
            showAddSkillDialog();
        });
        function showAddSkillDialog() {
            var overlay = document.createElement('div');
            overlay.className = 'dialog-overlay';

            var dialogBox = document.createElement('div');
            dialogBox.className = 'dialog-box';

            var title = document.createElement('div');
            title.className = 'dialog-title';
            title.textContent = 'Ajouter une nouvelle compétence';
            dialogBox.appendChild(title);

            var input = document.createElement('input');
            input.type = 'text';
            input.className = 'dialog-input';
            input.placeholder = 'Entrez une nouvelle compétence';
            dialogBox.appendChild(input);

            var addButton = document.createElement('button');
            addButton.type = 'button';
            addButton.className = 'dialog-button add';
            addButton.innerHTML = '<span class="custom-icon"><img src="/images/circle (1).png" alt="Image icône"></span>';
            addButton.addEventListener('click', function () {
                addNewSkill(input.value.trim());
                overlay.parentNode.removeChild(overlay);
            });
            dialogBox.appendChild(addButton);

            var cancelButton = document.createElement('button');
            cancelButton.type = 'button';
            cancelButton.className = 'dialog-button cancel';
            cancelButton.innerHTML = '<span class="custom-icon"><img src="/images/delete (1).png" alt="Image icône"></span>';
            cancelButton.addEventListener('click', function () {
                overlay.parentNode.removeChild(overlay);
            });
            dialogBox.appendChild(cancelButton);

            overlay.appendChild(dialogBox);
            document.body.appendChild(overlay);
        }


        function addNewSkill(skill) {
            if (skill !== '') {
                var selectCompetences = document.getElementById('competences');
                var newOption = document.createElement('option');
                newOption.value = skill;
                newOption.text = skill;
                selectCompetences.appendChild(newOption);

                // Sélectionner la nouvelle option ajoutée
                newOption.selected = true;

                // Mettre à jour les compétences sélectionnées affichées
                addSelectedSkill(skill);
            }
        }


        // Désélectionne l'option "Autre" après qu'elle a été sélectionnée
        document.getElementById('competences').addEventListener('change', function () {
            if (this.value.includes('autre')) {
                this.value = this.value.filter(function (val) {
                    return val !== 'autre';
                });
            }
        });
        document.getElementById('cancelButton').addEventListener('click', function (event) {
            event.preventDefault(); // Empêche le comportement par défaut du bouton (par exemple, soumettre le formulaire)

            // Réinitialisez les champs du formulaire ici
            document.getElementById('userForm').reset();
        });


