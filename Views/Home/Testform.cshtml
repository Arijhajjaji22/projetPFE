                // Envoyer la requête HTTP POST vers l'API pour ajouter la réponse
                $.ajax({
                    url: '/api/Test/add_answer',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ questionId: questionIndex, response: 'Nouvelle réponse ici', isCorrect: false }), // Remplacez 'Nouvelle réponse ici' par le texte de la nouvelle réponse
                    success: function (response) {
                        console.log('Réponse ajoutée avec succès:', response);
                        // Vous pouvez effectuer d'autres actions ici si nécessaire
                    },
                    error: function (xhr, status, error) {
                        console.error('Erreur lors de l\'ajout de la réponse:', error);
                    }
                });
            });



            function downloadPDF(index, version) {
                const { jsPDF } = window.jspdf;

                var doc = new jsPDF();
                var logoUrl = '/images/iat.png';
                var img = new Image();
                img.src = logoUrl;
                img.onload = function () {
                    doc.addImage(img, 'PNG', 10, 10, 20, 15);
                    var pdfWidth = doc.internal.pageSize.getWidth();
                    var pdfHeight = doc.internal.pageSize.getHeight();

                    var companyName = 'Innov-Alliance-Tech';
                    doc.setFontSize(60);
                    doc.setTextColor(192, 192, 192);
                    doc.text(companyName, pdfWidth / 2, pdfHeight / 2, { align: 'center', angle: -30 });
                    doc.setTextColor(0, 0, 0);

                    doc.setFontSize(18);
                    doc.text('Test d\'Évaluation des Candidats', 70, 20);

                    var tests = JSON.parse(localStorage.getItem('tests'));
                    var test = tests[index];

                    if (test) {
                        var y = 40;

                        doc.setFontSize(18);
                        doc.text('Test: ' + test.title, 10, y);
                        y += 10;

                        doc.setFontSize(12);
                        doc.text('Description:', 10, y);
                        y += 5;
                        doc.setFontSize(10);
                        doc.text(test.description, 10, y);
                        y += 10;

                        doc.setFontSize(12);
                        doc.text('Duration: ' + test.duration + ' minutes', 10, y);
                        y += 10;

                        test.questions && test.questions.forEach(function (question, qIndex) {
                            doc.setFontSize(14);
                            doc.text('Question ' + (qIndex + 1) + ': ' + question.query, 10, y);
                            y += 10;

                            if (version === 'manager') {
                                question.answers.forEach(function (answer, aIndex) {
                                    doc.setFontSize(12);
                                    let text = 'Answer ' + (aIndex + 1) + ': ' + answer.response;
                                    if (answer.isCorrect) {
                                        doc.setTextColor(0, 128, 0);
                                        text += ' ✔ C\'est la réponse correcte!';
                                    } else {
                                        doc.setTextColor(0, 0, 0);
                                    }
                                    doc.text(text, 20, y);
                                    y += 10;
                                });
                            }
                            y += 10;
                        });

                        var filename = version === 'manager' ? 'test_manager_' + index + '.pdf' : 'test_candidate_' + index + '.pdf';
                        doc.save(filename);
                    } else {
                        console.error('Aucun test trouvé dans le Local Storage');
                    }
                };
            }

            $('#testFormContainer').on('click', '.downloadPDFButton', function () {
                var index = $(this).data('index');
                var version = $(this).data('version');
                downloadPDF(index, version);
            });

            $('#testFormContainer').on('click', '.deleteAnswerButton', function () {
    var questionIndex = $(this).data('question-index');
    var answerIndex = $(this).data('answer-index');
    var form = $(this).closest('form');
    form.find('.answer-container[data-question-index="' + questionIndex + '"][data-answer-index="' + answerIndex + '"]').remove();
});

            $('#testFormContainer').on('click', '.deleteQuestionButton', function () {
                var questionIndex = $(this).data('question-index');
                var form = $(this).closest('form');
                form.find('.question-container[data-question-index="' + questionIndex + '"]').remove();
            });
        });
    </script>




























