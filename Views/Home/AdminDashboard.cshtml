    <script>
        $(document).ready(function () {

            $('.iq-sub-dropdown').removeClass('show');
            loadAdminNotifications(); // Charger les notifications initiales

            // Rafraîchir les notifications toutes les quelques secondes (par exemple, toutes les 30 secondes)
            setInterval(function () {
                loadAdminNotifications(); // Recharger les notifications
            }, 30000); // 30 secondes (30000 millisecondes)
            var currentUser;
            var userId;

            function loadAdminNotifications() {
                // Votre logique pour charger les notifications depuis l'API ici
                $.ajax({
                    type: 'GET',
                    url: '/api/StageOffer/admin/dashboard',
                    success: function (notifications) {
                        // Efface les notifications précédentes
                        $('#notificationList').empty();

                        // Ne charger que les 5 premières notifications
                        notifications.slice(0, 5).forEach(function (notification) {
                            // Créer un élément de liste pour la notification avec une icône et une croix à droite
                            var notificationItem = $('<li class="notification-item">' +
                                '<i class="fas fa-exclamation-circle"></i>&nbsp;' + // Icône pour la notification avec un espace
                                notification.message +
                                '&nbsp;&nbsp;&nbsp;' + // Espace entre le texte et l'icône de la croix
                                '<i class="fas fa-times notification-close"></i>' + // Croix pour fermer la notification
                                '</li>');
                            // Ajouter la notification à la liste
                            $('#notificationList').append(notificationItem);
                        });

                        // Ajouter un bouton "Show all notifications" s'il y a plus de 5 notifications
                        if (notifications.length > 5) {
                            $('#notificationList').append('<li class="show-all"><button id="showAllNotificationsBtn" class="btn btn-link">Show all notifications</button></li>');
                        }

                        // Vérifier s'il y a des nouvelles offres de stage
                        var hasNewOffers = notifications.some(function (notification) {
                            return notification.message === "Nouvelle offre de stage ajoutée";
                                    

                        });

                        // Ajouter l'indicateur dynamique si des nouvelles offres de stage existent
                        if (hasNewOffers) {
                            $('#notification-dropdown .offer-indicator').addClass('show'); // Ajouter la classe 'show' à l'indicateur
                        }
                    },
                    error: function (error) {
                        console.error('Erreur lors du chargement des notifications:', error);
                    }
                });
            }

            $('#notification-dropdown').on('click', function () {
                $('.offer-indicator' ).remove(); // Supprimer l'indicateur dynamique
            });

            // Gestionnaire d'événement pour le clic sur la croix de chaque notification
            $('#notificationList').on('click', '.notification-close', function (event) {
                // Récupérer l'élément parent (la notification) et la supprimer
                $(this).closest('.notification-item').remove();
            });

            // Gestionnaire d'événement pour le clic sur "Show all notifications"
            $('#notificationList').on('click', '#showAllNotificationsBtn', function () {
                // Charger toutes les notifications
                loadAllNotifications();
            });

            function loadAllNotifications() {
                // Charger toutes les notifications depuis la nouvelle URL
                $.ajax({
                    type: 'GET',
                    url: '/api/StageOffer/admin/allnotifications', // Utilisez la nouvelle URL pour obtenir toutes les notifications
                    success: function (allNotifications) {
                        // Efface les notifications précédentes
                        $('#notificationList').empty();

                        // Charger toutes les notifications
                        allNotifications.forEach(function (notification) {
                            // Créer un élément de liste pour la notification avec une icône et une croix à droite
                            var notificationItem = $('<li class="notification-item">' +
                                '<i class="fas fa-exclamation-circle"></i>&nbsp;' + // Icône pour la notification avec un espace
                                notification.message +
                                '&nbsp;&nbsp;&nbsp;' + // Espace entre le texte et l'icône de la croix
                                '<i class="fas fa-times notification-close"></i>' + // Croix pour fermer la notification
                                '</li>');
                            // Ajouter la notification à la liste
                            $('#notificationList').append(notificationItem);
                        });
                    },
                    error: function (error) {
                        console.error('Erreur lors du chargement de toutes les notifications:', error);
                    },
                    complete: function () {
                        // Supprimer le bouton "Show all notifications" une fois que toutes les notifications sont chargées
                        $('.show-all').remove();
                    }
                });
            }


        });
    </script>




    
