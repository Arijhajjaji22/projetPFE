    <script>
        $(document).ready(function () {
            $('#closeDialogBtn, #cancelActionBtn').on('click', function () {
                $('#confirmationDialog').modal('hide');
            });
        });
        // Gérer le clic sur le bouton de commentaire
        $(document).on('click', '.btn-comment', function () {
           
            var subjectId = $(this).data('id'); // Récupérer l'ID du sujet
            // Afficher le dialogue pour ajouter un commentaire
            $('#commentDialog').modal('show');

            // Gérer l'ajout de commentaire
            $('#submitCommentBtn').on('click', function () {
                var comment = $('#commentTextArea').val(); // Récupérer le commentaire
                addComment(subjectId, comment); // Appeler la fonction pour ajouter le commentaire
                $('#commentDialog').modal('hide'); // Cacher le dialogue après l'ajout de commentaire
            });
        });
        function removeSubjectRow(subjectId) {
            $('#subject_' + subjectId).remove(); // Remove the row with the specified subjectId
        }


        // Fonction pour ajouter un commentaire
        function addComment(subjectId, comment) {
            // Envoyer une requête AJAX pour ajouter le commentaire
            $.ajax({
                type: 'POST',
                url: '/api/StageOffer/comment/' + subjectId, // Utiliser l'URL pour ajouter le commentaire
                data: { comment: comment }, // Envoyer le commentaire dans les données de la requête
                success: function (response) {
                    console.log('Commentaire ajouté avec succès');
                    // Vous pouvez ajouter du code ici pour mettre à jour l'interface utilisateur si nécessaire
                },
                error: function (error) {
                    console.error('Erreur lors de l\'ajout du commentaire : ', error);
                }
            });
        }
        function filterTable(searchValue) {
            // Mettez ici votre code pour filtrer la table en fonction de la valeur de recherche
            // Assurez-vous que cette fonction fonctionne correctement pour filtrer votre table
            $('#validatedSubjectsTableBody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(searchValue) > -1);
            });
        }
        // Gérer le clic sur le bouton de recherche
        $('.btn-search').click(function () {
            var searchValue = $('.input-search').val().toLowerCase(); // Récupérer la valeur de l'entrée de recherche en minuscules
            filterTable(searchValue); // Appeler la fonction pour filtrer la table
        });

        $('#searchForm').on('submit', function (e) {
            e.preventDefault(); // Empêcher la soumission du formulaire
        });

        $(document).ready(function () {
            // Détacher d'abord tous les gestionnaires d'événements de clic sur le bouton de confirmation
            $('#confirmDisapproveBtn').off('click');

            // Gérer le clic sur le bouton de confirmation pour désapprouver
            $('#confirmDisapproveBtn').on('click', function () {
                $('#confirmDisapproveDialog').modal('hide');
                var subjectId = $(this).data('subjectId'); // Récupérer l'ID du sujet
                disapproveSubject(subjectId); // Appeler la fonction pour désapprouver le sujet
            });

            $('#closeDialogBtn, #cancelActionBtn').on('click', function () {
                $('#confirmationDialog').modal('hide');
            });
        });
        // Variable pour stocker les identifiants des sujets désapprouvés
        var disapprovedSubjectIds = [];

        // Appel périodique de la fonction pour récupérer les sujets validés
        setInterval(fetchValidatedSubjects, 5000);

        // Fonction pour récupérer les sujets validés
        // Modifier la fonction fetchValidatedSubjects pour récupérer tous les sujets, qu'ils soient approuvés ou désapprouvés
        function fetchValidatedSubjects() {
            $.ajax({
                type: 'GET',
                url: '/api/StageOffer/notdisapproved', // Utiliser l'URL pour récupérer tous les sujets non désapprouvés
                success: function (validatedSubjects) {
                    console.log('Sujets récupérés :', validatedSubjects);
                    displayValidatedSubjects(validatedSubjects);
                },
                error: function (error) {
                    console.error('Erreur lors de la récupération des sujets :', error);
                }
            });
        }
        // Gérer le clic sur le bouton d'approbation
        $(document).on('click', '.btn-approve', function () {
            var subjectId = $(this).data('id'); // Récupérer l'ID du sujet
            // Afficher le dialogue de confirmation
            $('#confirmationDialog').modal('show');

            // Gérer la confirmation de l'action
            $('#confirmActionBtn').on('click', function () {
                $('#confirmationDialog').modal('hide');
                approveSubject(subjectId); // Appeler la fonction pour approuver le sujet
            });
        });
        $('#confirmActionBtn').on('click', function () {
            $('#confirmationDialog').modal('hide');
            approveSubject(subjectId); // Appeler la fonction pour approuver le sujet
        });
        // Fonction pour approuver un sujet
        function approveSubject(subjectId) {
            $.ajax({
                type: 'POST', // Utiliser la méthode POST pour approuver
                url: '/api/StageOffer/approve/' + subjectId, // Utiliser l'URL pour approuver le sujet
                success: function (response) {
                    console.log('Sujet approuvé avec succès');
                    // Masquer le bouton "Approuver" et ajouter une classe pour changer la couleur de la ligne
                    var row = $('#subject_' + subjectId);
                    row.addClass('approved-subject');
                    row.find('.btn-approve').hide();
                },
                error: function (error) {
                    console.error('Erreur lors de l\'approbation du sujet :', error);
                }
            });
        }




        // Fonction pour afficher les sujets validés dans le tableau
        function displayValidatedSubjects(validatedSubjects) {
            var tableBody = $('#validatedSubjectsTableBody');
            tableBody.empty(); // Effacer le contenu précédent du tableau
            validatedSubjects.forEach(function (subject) {
                // Vérifier si l'identifiant du sujet est dans les sujets désapprouvés
                if (!disapprovedSubjectIds.includes(subject.id)) {
                    var rowClass = subject.approved ? 'approved-subject' : '';
                    var approveButtonDisplay = subject.approved ? 'style="display:none;"' : '';
                    var row = '<tr id="subject_' + subject.id + '" class="' + rowClass + '">' + // Ajouter l'identifiant unique à la ligne
                        '<td>' + subject.titre + '</td>' +
                        '<td>' + subject.description + '</td>' +
                        '<td>' + subject.domaineActivite + '</td>' +
                        '<td>' + subject.competencesRequises + '</td>' +
                        '<td>' + new Date(subject.dateDebut).toLocaleDateString() + '</td>' +
                        '<td>' + new Date(subject.dateFin).toLocaleDateString() + '</td>' +
                        '<td>' + subject.niveauEtudesRequis + '</td>' +
                        '<td>' + subject.typedeStage + '</td>' +
                        // Ajout du bouton "Afficher le test"
                        '<td>' +
                        '<button class="btn btn-sm btn-view-test" data-id="' + subject.id + '" title="Afficher le test">' +
                        '<span class="custom-icon"><img src="/images/homework.png" alt="Image icône"></span>' +
                        '</button>' +
                        '</td>' +
                        '<td>' +
                        '<button class="btn btn-sm btn-approve" data-id="' + subject.id + '" title="Approuver sujet" ' + approveButtonDisplay + '><span class="custom-icon"><img src="/images/circle (1).png" alt="Approve"></span></button>' +
                        '<button class="btn btn-sm btn-disapprove" data-id="' + subject.id + '" title="Désapprouver sujet"><span class="custom-icon"><img src="/images/delete (1).png" alt="Disapprove"></span></button>' +
                        '</td>' +
                        '</tr>';
                    tableBody.append(row);
                }
            });
        }


        // Gérer le clic sur le bouton "Afficher le test"
        $(document).on('click', '.btn-view-test', function () {
            var subjectId = $(this).data('id'); // Récupérer l'ID du sujet
            viewTest(subjectId); // Appeler la fonction pour afficher le test associé
        });

        // Fonction pour afficher le test associé à l'offre de stage
        function viewTest(offerId) {
            // Envoyez une requête AJAX pour récupérer le test associé à l'offre de stage
            $.ajax({
                type: 'GET',
                url: '/api/Test/' + offerId, // Modifier l'URL pour inclure l'identifiant de l'offre de stage comme sujet
                success: function (tests) {
                    // Affichez les tests récupérés dans la console pour vérification
                    console.log('Tests récupérés avec succès :', tests);
                    // Stocker les tests récupérés dans le Local Storage
                    localStorage.setItem('tests', JSON.stringify(tests));
                    // Rediriger vers la page Testform avec l'identifiant de l'offre de stage
                    window.location.href = '@Url.Action("Testform", "Home")' + '?offerId=' + offerId;
                },
                error: function (error) {
                    console.error('Erreur lors de la récupération des tests :', error);
                }
            });
        }


        // Gérer le clic sur le bouton de désapprobation
        // Gérer le clic sur le bouton de désapprobation
        // Gérer le clic sur le bouton de désapprobation
        $(document).on('click', '.btn-disapprove', function () {
            var subjectId = $(this).data('id'); // Récupérer l'ID du sujet
            // Afficher le dialogue de confirmation pour le désapprouver
            $('#confirmDisapproveDialog').modal('show');

            // Détacher d'abord tous les gestionnaires d'événements de clic sur le bouton de confirmation
            $('#confirmDisapproveBtn').off('click');
            $('#confirmDisapproveBtn').on('click', function () {
                $('#confirmDisapproveDialog').modal('hide');
                disapproveSubject(subjectId); // Appeler la fonction pour désapprouver le sujet
            });

          
        });


        // Gérer le clic sur le bouton de fermeture du dialogue de désapprobation
        $(document).on('click', '#closeDisapproveDialogBtn, #cancelDisapproveBtn', function () {
            $('#confirmDisapproveDialog').modal('hide');
        });


        // Fonction pour désapprouver un sujet
        function disapproveSubject(subjectId) {
            $.ajax({
                type: 'POST', // Utiliser la méthode POST pour désapprouver
                url: '/api/StageOffer/disapprove/' + subjectId, // Utilisation de la nouvelle URL pour l'action Disapprove
                success: function (response) {
                    console.log('Sujet désapprouvé avec succès');
                    // Ajouter l'identifiant du sujet à la liste des sujets désapprouvés
                    disapprovedSubjectIds.push(subjectId);
                    // Supprimer la ligne correspondante de la table côté client
                    removeSubjectRow(subjectId);
                },
                error: function (error) {
                    console.error('Erreur lors de la désapprobation du sujet :', error);
                }
            });
        }

    </script>










