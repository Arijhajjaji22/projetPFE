    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var currentUser;
            var userId;
            $('#editEmail').on('input', function () {
                $('#error-email').text(''); // Effacer le message d'erreur pour l'email
            });

            function fillEditForm(userData) {
                $('#editUsername').val(userData.username);
                $('#editEmail').val(userData.email);
                $('#editPassword').val(userData.password);
                $('#editRole').val(userData.role);
            }
            function updateTable(pageNumber) {
                var itemsPerPage = 10; // Nombre d'éléments par page
                var startIndex = (pageNumber - 1) * itemsPerPage; // Indice de début de la page
                var endIndex = startIndex + itemsPerPage; // Indice de fin de la page
                $('#userTable tbody tr').hide().slice(startIndex, endIndex).show();
            }

            // Fonction pour mettre à jour les données du tableau en fonction du numéro de page
            function updateTable(pageNumber) {
                var itemsPerPage = 10; // Nombre d'éléments par page
                var startIndex = (pageNumber - 1) * itemsPerPage; // Indice de début de la page
                var endIndex = startIndex + itemsPerPage; // Indice de fin de la page
                $('#userTable tbody tr').hide().slice(startIndex, endIndex).show();
            }

            // Activer la pagination
            $('.pagination').on('click', '.page-link', function () {
                var pageNumber = parseInt($(this).text()); // Récupérer le numéro de page à partir du texte du lien
                if (!isNaN(pageNumber)) {
                    updateTable(pageNumber); // Mettre à jour les données du tableau avec le numéro de page cliqué
                } else if ($(this).text() === 'Previous') {
                    var currentPage = parseInt($('.pagination .active .page-link').text());
                    if (currentPage > 1) {
                        updateTable(currentPage - 1); // Aller à la page précédentes
                        $('.pagination .active').removeClass('active').prev().addClass('active');
                    }
                } else if ($(this).text() === 'Next') {
                    var currentPage = parseInt($('.pagination .active .page-link').text());
                    var totalPages = parseInt($('.pagination .page-item').last().prev().find('.page-link').text());
                    if (currentPage < totalPages) {
                        updateTable(currentPage + 1); // Aller à la page suivante
                        $('.pagination .active').removeClass('active').next().addClass('active');
                    }
                }
            });

            // Initialiser la pagination avec la première page active
            updateTable(1);
            $('.pagination .page-item').first().addClass('active');


            $('#togglePasswordVisibility').click(function () {
                var passwordInput = $('#editPassword');
                var icon = $(this).find('i');
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            updateUserTable();

            $('#userTable').on('click', '.edit-btn', function () {
                userId = $(this).data('user-id');

                $.ajax({
                    type: 'GET',
                    url: '/api/Users/' + userId,
                    success: function (user) {
                        fillEditForm(user);
                        currentUser = user;
                        $('#editUserModal').modal('show');
                    },
                    error: function (error) {
                        console.error('Erreur lors de la récupération de l\'utilisateur pour la modification:', error);
                    }
                });
            });

            $('#saveChangesBtn').click(function () {
                if (currentUser) {
                    if (currentUser.id != userId) {
                        console.error("L'ID de l'utilisateur a changé. Impossible de mettre à jour l'utilisateur.");
                        return;
                    }
                    currentUser.username = $('#editUsername').val();
                    currentUser.email = $('#editEmail').val();
                    currentUser.password = $('#editPassword').val();
                    currentUser.role = $('#editRole').val();
                    $.ajax({
                        type: 'PUT',
                        url: '/api/Users/' + currentUser.id,
                        contentType: 'application/json',
                        data: JSON.stringify(currentUser),
                        success: function () {
                            updateUserTable();
                            $('#editUserModal').modal('hide');
                            console.log('Utilisateur mis à jour avec succès');
                        },
                        error: function (error) {
                            console.error('Erreur lors de la mise à jour de l\'utilisateur:', error);
                        }
                    });
                } else {
                    console.error('Aucun utilisateur sélectionné pour la modification');
                    var errorMessage = "Cet email existe déjà. Veuillez saisir un autre email.";
                    $('#error-email').text(errorMessage);
                    $('#editEmail').addClass('error-input');
                }
            });

            $('#showPasswordBtn').click(function () {
                var passwordInput = $('#editPassword');
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    $(this).text('Masquer');
                } else {
                    passwordInput.attr('type', 'password');
                    $(this).text('Afficher');
                }
            });
            function updateUserTable() {
                $.ajax({
                    type: 'GET',
                    url: '/api/Users',
                    success: function (users) {
                        $('#userTable tbody').empty();
                        users.forEach(function (user) {
                            if (!user.isArchived) {

                                var passwordLength = user.password.length;
                                var maskedPassword = '*'.repeat(passwordLength);
                                var role = $('#Role').val(); // Récupérer le rôle sélectionné dans le formulaire
                                var roleClass = ''; // Initialiser la classe de rôle
                                switch (role) {
                                    case 'Admin':
                                        roleClass = 'role-admin'; // Assigner la classe 'role-admin' si le rôle est admin
                                        break;
                                    case 'Manager':
                                        roleClass = 'role-manager'; // Assigner la classe 'role-manager' si le rôle est manager
                                        break;
                                    case 'R&H':
                                        roleClass = 'role-rh'; // Assigner la classe 'role-rh' si le rôle est R&H
                                        break;
                                    default:
                                        roleClass = ''; // Par défaut, pas de classe spécifique
                                }
                                $('#userTable tbody').append('<tr>' +
                                    '<td class="username">' + user.username + '</td>' +
                                    '<td class="email">' + user.email + '</td>' +
                                    '<td class="role ' + roleClass + '">' + user.role + '</td>' +
                                    '<td>' +
                                    '<button class="btn edit-btn" data-user-id="' + user.id + '" title="Modifier un utilisateur" data-bs-toggle="tooltip" data-bs-placement="top"><span class="custom-icon"><img src="/images/edit-info (1).png" alt="Image icône"></span></button>' +
                                    '<button class="btn delete-btn" data-user-id="' + user.id + '" title="Archiver un utilisateur" data-bs-toggle="tooltip" data-bs-placement="top"><span class="custom-icon"><img src="/images/delete-user (1).png" alt="Image icône"></span></button>' +
                                    '</td>' +
                                    '</tr>');


                              


                            }
                        });
                    },
                    error: function (error) {
                        console.error('Erreur lors de la récupération des utilisateurs:', error);
                    }
                });
            }



            $('#userTable').on('click', '.delete-btn', function () {
                var userId = $(this).data('user-id');
                $('#confirmArchiveDialog').modal('show');
                // Gérer la confirmation de l'archivage
                $('#confirmArchive').off().on('click', function () {
                    $.ajax({
                        type: 'DELETE',
                        url: '/api/Users/' + userId,
                        success: function () {
                            updateUserTable();
                            console.log('Utilisateur archivé avec succès');
                        },
                        error: function (error) {
                            console.error('Erreur lors de l\'archivage de l\'utilisateur:', error);
                        }
                    });
                    $('#confirmArchiveDialog').modal('hide');
                });
            });
            $('.input-search').on('input', function () {
                var searchText = $(this).val().toLowerCase();
                $('#userTable tbody tr').each(function () {
                    var username = $(this).find('.username').text().toLowerCase();
                    var email = $(this).find('.email').text().toLowerCase();
                    var role = $(this).find('.role').text().toLowerCase();
                    if (username.includes(searchText) || email.includes(searchText) || role.includes(searchText)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });


        });
    </script>


