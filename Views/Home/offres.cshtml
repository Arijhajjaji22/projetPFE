    <script>
        $(document).ready(function () {
            // Appel de la fonction pour mettre à jour la table des sujets
            updateSujetsTable();

            // Écouter le clic sur le bouton de recherche
            $('.btn-search').click(function () {
                var searchValue = $('.input-search').val().toLowerCase(); // Récupérer la valeur de l'entrée de recherche en minuscules
                filterTable(searchValue); // Appeler la fonction pour filtrer la table
            });
        });

        function filterTable(value) {
            $('#sujetsTable tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1); // Masquer ou afficher les lignes de la table en fonction de la correspondance de la recherche
            });
        }
        // Gérer le clic sur le bouton "Fermer" dans le dialogue d'édition
        $('#closeEditOfferBtn').on('click', function () {
            $('#editOfferDialog').modal('hide');
        });

        // Gérer le clic sur le bouton "Annuler" dans le dialogue d'édition
        $('#cancelEditOfferBtn').on('click', function () {
            // Effacer les champs du formulaire
            $('#editOfferTitle').val('');
            $('#editOfferDescription').val('');
            $('#editOfferDomaine').val('');
            $('#editOfferCompetences').val('');
            $('#editOfferDateDebut').val('');
            $('#editOfferDateFin').val('');
            $('#editOfferNiveauEtudes').val('');
            $('#editOfferTypeStage').val('');

            // Cacher le dialogue d'édition
            $('#editOfferDialog').modal('hide');
        });


        function updateSujetsTable() {
            $.ajax({
                type: 'GET',
                url: '/api/StageOffer',
                success: function (offers) {
                    $('#sujetsTable tbody').empty();
                    offers.forEach(function (offer) {
                        // Vérifier si competencesRequises est un tableau
                        var competences = Array.isArray(offer.competencesRequises) ? offer.competencesRequises.join(', ') : offer.competencesRequises;

                        // Ajout des boutons Edit et Delete
                        var editButton = '<button class="btn btn-sm btn-edit" data-id="' + offer.id + '"><i class="fas fa-pencil-alt" style="color: #22a6b3;"></i></button>';
                        var deleteButton = '<button class="btn btn-sm btn-delete" data-id="' + offer.id + '" data-bs-toggle="modal" data-bs-target="#confirmArchiveDialog"><i class="fas fa-trash-alt" style="color: #22a6b3;"></i></button>';

                        $('#sujetsTable tbody').append('<tr>' +
                            '<td>' + offer.titre + '</td>' +
                            '<td>' + offer.description + '</td>' +
                            '<td>' + offer.domaineActivite + '</td>' +
                            '<td>' + competences + '</td>' +
                            '<td>' + offer.dateDebut + '</td>' +
                            '<td>' + offer.dateFin + '</td>' +
                            '<td>' + offer.niveauEtudesRequis + '</td>' +
                            '<td>' + offer.typedeStage + '</td>' +
                            '<td>' + editButton + ' ' + deleteButton + '</td>' +
                            '</tr>');
                    });
                },
                error: function (error) {
                    console.error('Erreur lors de la récupération des offres de stage:', error);
                }
            });
        }
        // Gérer le clic sur le bouton "Edit"
        $('#sujetsTable').on('click', '.btn-edit', function () {
            // Récupérer les données de la ligne sélectionnée dans le tableau
            var row = $(this).closest('tr');
            var offerTitle = row.find('td:eq(0)').text().trim(); // Titre de l'offre
            var offerDescription = row.find('td:eq(1)').text().trim(); // Description de l'offre
            var offerDomaine = row.find('td:eq(2)').text().trim(); // Domaine d'activité
            var offerCompetences = row.find('td:eq(3)').text().trim(); // Compétences requises
            var offerDateDebut = row.find('td:eq(4)').text().trim(); // Date de début
            var offerDateFin = row.find('td:eq(5)').text().trim(); // Date de fin
            var offerNiveauEtudes = row.find('td:eq(6)').text().trim(); // Niveau d'études requis
            var offerTypeStage = row.find('td:eq(7)').text().trim(); // Type de stage

            // Remplir les champs du formulaire de modification avec les données récupérées
            $('#editOfferTitle').val(offerTitle);
            $('#editOfferDescription').val(offerDescription);
            $('#editOfferDomaine').val(offerDomaine);
            $('#editOfferCompetences').val(offerCompetences);
            $('#editOfferDateDebut').val(offerDateDebut);
            $('#editOfferDateFin').val(offerDateFin);
            $('#editOfferNiveauEtudes').val(offerNiveauEtudes);
            $('#editOfferTypeStage').val(offerTypeStage);

            // Afficher le dialogue de modification
            $('#editOfferDialog').modal('show');
        });
        // Gérer le clic sur le bouton "Save" dans le dialogue d'édition
        $('#saveEditOfferBtn').on('click', function () {
            // Récupérer l'ID de l'offre à modifier
            var offerId = $('#editOfferId').val();

            // Récupérer les valeurs des champs du formulaire
            var updatedOffer = {
                titre: $('#editOfferTitle').val(),
                description: $('#editOfferDescription').val(),
                domaineActivite: $('#editOfferDomaine').val(),
                competencesRequises: $('#editOfferCompetences').val(),
                dateDebut: $('#editOfferDateDebut').val(),
                dateFin: $('#editOfferDateFin').val(),
                niveauEtudesRequis: $('#editOfferNiveauEtudes').val(),
                typedeStage: $('#editOfferTypeStage').val()
            };

            // Envoyer la requête PUT à l'API
            $.ajax({
                type: 'PUT',
                url: '/api/StageOffer/' + offerId,
                contentType: 'application/json',
                data: JSON.stringify(updatedOffer),
                success: function () {
                    // Mettre à jour la table des sujets après la modification
                    updateSujetsTable();
                    // Cacher le dialogue d'édition après la modification
                    $('#editOfferDialog').modal('hide');
                },
                error: function (error) {
                    console.error('Erreur lors de la mise à jour de l\'offre de stage:', error);
                }
            });
        });

        // Utilisation de la délégation d'événements pour le clic sur le bouton "Delete"
        $('#sujetsTable').on('click', '.btn-delete', function () {
            var offerId = $(this).data('id');
            $('#confirmArchiveDialog').modal('show');
            // Gérer la confirmation de la suppression
            $('#confirmDeleteBtn').off().on('click', function () {
                $.ajax({
                    type: 'DELETE',
                    url: '/api/StageOffer/' + offerId,
                    success: function () {
                        updateSujetsTable(); // Correction de la fonction appelée ici
                        console.log('Offre de stage supprimée avec succès');
                    },
                    error: function (error) {
                        console.error('Erreur lors de la suppression de l\'offre de stage:', error);
                    }
                });
                $('#confirmArchiveDialog').modal('hide');
            });

            // Gérer l'annulation de la suppression
            $('#cancelDeleteBtn').off().on('click', function () {
                $('#confirmArchiveDialog').modal('hide');
            });
        });

        // Gérer le clic sur le bouton de fermeture de la modale
        $('#closeDialogBtn').on('click', function () {
            $('#confirmArchiveDialog').modal('hide');
        });

        // Empêcher la soumission du formulaire lorsque vous appuyez sur "Entrée"
        $('#searchForm').on('submit', function (e) {
            e.preventDefault();
            var searchValue = $('.input-search').val().toLowerCase(); // Récupérer la valeur de l'entrée de recherche en minuscules
            filterTable(searchValue); // Appeler la fonction pour filtrer la table
        });

